{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "openwork",
  "mcp": {
    "control-chrome": {
      "type": "local",
      "enabled": true,
      "command": [
        "chrome-devtools-mcp"
      ]
    },
    "obsidian": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@mauricio.wolff/mcp-obsidian@latest",
        "E:/Obsidian"
      ]
    },
    "context7": {
      "type": "remote",
      "enabled": true,
      "url": "https://mcp.context7.com/mcp"
    },
    "z-ai": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y@z_ai/coding-helper"
      ]
    }
  },
  "plugin": [
    "opencode-scheduler"
  ],
  "model": "zhipuai-coding-plan/glm-4.7"
}
